<p id="notice"></p>
    <div class="d-grid col-4 mx-auto">
       <h2>User info</h2>

            <%if @user.errors.any? %>
                <%= @user.errors.count %> error prohibited this obj from being saved:
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                  </ul>
            <% end %>





          <%= form_with model: @user  do |f| %>
               <p>Name</p>
                <%= f.text_field :name %>

               <p>Image</p>
                <%= f.file_field :profile_image, accept: "image/*" %>

               <p>introduction</p>
                 <div class="introduction"><%= f.text_area :introduction %></div>

                  <br>  <%= f.submit 'Update User', class: "btn btn-secondary"  %>

        <% end %>
</div>